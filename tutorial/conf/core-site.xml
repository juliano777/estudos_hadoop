<configuration>
    <!--
         ${HADOOP_CONF_DIR}/core-site.xml
         Environment Variables:
     
         - NAME_NODE
         - HADOOP_TMP_DIR
    -->

    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://${NAME_NODE}:9000/</value>
    </property>

    <property>
        <name>dfs.permissions.enabled</name>
        <value>false</value>
    </property>

    <property>
        <name>hadoop.tmp.dir</name>
        <value>${HADOOP_TMP_DIR}</value>
    </property>
</configuration>
